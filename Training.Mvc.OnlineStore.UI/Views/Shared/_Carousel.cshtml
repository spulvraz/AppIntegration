@model IEnumerable<Training.Mvc.OnlineStore.UI.Models.CarouselItem>

@if (Model != null && Model.Any())
{   
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>

            @for (int i = 1; i <= Model.Skip(1).Count(); i++)
            {
                <li data-target="#carousel-example-generic" data-slide-to="@i"></li>
            }

        </ol>

        <div class="carousel-inner">

            <div class="item active">
                <a href="@Model.ElementAt(0).PageUrl">
                    <img class="slide-image" src="@Model.ElementAt(0).ImageUrl" alt="@Model.ElementAt(0).Title">
                </a>
            </div>

            @foreach (var item in Model.Skip(1))
            {
                <div class="item">
                    <a href="@item.PageUrl">
                        <img class="slide-image" src="@item.ImageUrl" alt="@item.Title">
                    </a>
                </div>
            }

        </div>
        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
}
